@page "/fetchdata"

@inherits FetchBase

<PageTitle>Bio</PageTitle>

<h1>Bio</h1>

<p>This component is grabbing a summary of Bio Data.</p>

@if (BiosList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>PerIdentification (C)</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bio in BiosList)
            {
                <tr>
                    <td>@bio.PerIdentification</td>
                    <td>@bio.FirstName</td>
                    <td>@bio.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}

